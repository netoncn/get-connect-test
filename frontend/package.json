{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "pnpm exec ng",
    "start": "pnpm exec ng serve",
    "build": "pnpm exec ng build --configuration production",
    "build:dev": "pnpm exec ng build",
    "watch": "pnpm exec ng build --watch --configuration development",
    "test": "pnpm exec ng test",
    "e2e": "pnpm exec playwright test",
    "e2e:headed": "pnpm exec playwright test --headed",
    "e2e:ui": "pnpm exec playwright test --ui",
    "e2e:debug": "pnpm exec playwright test --debug",
    "e2e:report": "pnpm exec playwright show-report"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.0",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.12",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
